<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.opennms.android"
    android:versionCode="1"
    android:versionName="1.0.0-SNAPSHOT">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <!-- Networking -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Sync -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <!-- Notifications -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/opennms_logo"
        android:theme="@style/Theme.OpenNMS">

        <activity android:name=".ui.nodes.NodesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.nodes.NodeDetailsActivity" />

        <activity android:name=".ui.alarms.AlarmsActivity" />
        <activity android:name=".ui.alarms.AlarmDetailsActivity" />

        <activity android:name=".ui.events.EventsActivity" />
        <activity android:name=".ui.events.EventDetailsActivity" />

        <activity android:name=".ui.outages.OutagesActivity" />
        <activity android:name=".ui.outages.OutageDetailsActivity" />

        <activity android:name=".ui.SettingsActivity" />

        <provider
            android:authorities="org.opennms.android.sync.AlarmsSyncAdapter"
            android:exported="false"
            android:name=".provider.AppContentProvider" />

        <service
            android:exported="true"
            android:name=".sync.SyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <service android:name=".sync.AccountService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service android:name=".sync.LoadManager" />

    </application>

</manifest>