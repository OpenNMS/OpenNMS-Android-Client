<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.opennms.android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light">

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.SettingsActivity"></activity>
        <activity android:name=".ui.nodes.NodeDetailsActivity"></activity>
        <activity android:name=".ui.outages.OutageDetailsActivity"></activity>
        <activity android:name=".ui.alarms.AlarmDetailsActivity"></activity>

        <service android:name=".service.RefreshService"></service>

        <provider
            android:name=".dao.nodes.NodesListProvider"
            android:authorities="org.opennms.android.dao.nodes.NodesListProvider"
            android:multiprocess="true">
        </provider>

        <provider
            android:name=".dao.outages.OutagesListProvider"
            android:authorities="org.opennms.android.dao.outages.OutagesListProvider"
            android:multiprocess="true">
        </provider>

        <provider
            android:name=".dao.events.EventsListProvider"
            android:authorities="org.opennms.android.dao.events.EventsListProvider"
            android:multiprocess="true">
        </provider>

        <provider
            android:name=".dao.alarms.AlarmsListProvider"
            android:authorities="org.opennms.android.dao.alarms.AlarmsListProvider"
            android:multiprocess="true">
        </provider>

    </application>

</manifest>