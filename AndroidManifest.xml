<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.opennms.android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".nodes.NodeDetailsActivity"></activity>
        <activity android:name=".outages.OutageDetailsActivity"></activity>
        <activity android:name=".alarms.AlarmDetailsActivity"></activity>

        <service android:name=".MainService"></service>

        <provider
            android:name=".nodes.dao.NodesListProvider"
            android:authorities="org.opennms.android.nodes.dao.NodesListProvider"
            android:multiprocess="true">
        </provider>

        <provider
            android:name=".outages.dao.OutagesListProvider"
            android:authorities="org.opennms.android.outages.dao.OutagesListProvider"
            android:multiprocess="true">
        </provider>

        <provider
            android:name=".alarms.dao.AlarmsListProvider"
            android:authorities="org.opennms.android.alarms.dao.AlarmsListProvider"
            android:multiprocess="true">
        </provider>

    </application>

</manifest>