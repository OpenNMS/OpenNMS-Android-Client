<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/alarm_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/details_layout_padding"
        android:paddingTop="@dimen/details_layout_padding">

        <TextView
            android:id="@+id/alarm_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/alarm_severity_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/details_layout_padding"
                android:paddingRight="@dimen/details_layout_padding"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/alarm_ack_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:paddingTop="@dimen/details_section_padding_top"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_ack_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding" />

        <TextView
            android:id="@+id/alarm_log_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:paddingTop="@dimen/details_section_padding_top"
            android:text="@string/alarm_details_message"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_log_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding" />

        <TextView
            android:id="@+id/alarm_node_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:paddingTop="@dimen/details_section_padding_top"
            android:text="@string/alarm_details_node"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding" />

        <TextView
            android:id="@+id/alarm_service_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:paddingTop="@dimen/details_section_padding_top"
            android:text="@string/alarm_details_service_type"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding" />

        <TextView
            android:id="@+id/alarm_last_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:paddingTop="@dimen/details_section_padding_top"
            android:text="@string/alarm_details_last_event"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_last_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding" />

        <TextView
            android:id="@+id/alarm_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding"
            android:paddingTop="@dimen/details_section_padding_top"
            android:text="@string/alarm_details_desc"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/details_layout_padding"
            android:paddingRight="@dimen/details_layout_padding" />

    </LinearLayout>

</ScrollView>