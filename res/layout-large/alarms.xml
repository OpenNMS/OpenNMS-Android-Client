<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ListView
        android:id="@android:id/list"
        android:layout_width="@dimen/list_width"
        android:layout_height="fill_parent"/>

    <TableLayout
        android:id="@+id/alarm_details_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/layout_padding">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alarm_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarms_info_id"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        </TableRow>

        <TableRow
            android:id="@+id/alarm_severity_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alarm_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarms_info_severity_unknown"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/alarm_description_padding"
            android:paddingTop="@dimen/alarm_description_padding">

            <TextView
                android:id="@+id/alarm_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarms_info_no_description"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alarm_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarms_info_no_message"/>
        </TableRow>

    </TableLayout>

</LinearLayout>